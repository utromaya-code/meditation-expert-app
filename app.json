{
  "expo": {
    "name": "Эксперт Медитации",
    "slug": "meditation-expert",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.utromaya.meditationexpert",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "plugins": [],
    "android": {
      "package": "com.utromaya.meditationexpert",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#0a0a0f"
      },
      "permissions": [
        "RECORD_AUDIO",
        "NOTIFICATIONS"
      ]
    }
  }
}
